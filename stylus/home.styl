@import 'component/reset.styl'
@import 'component/util.styl'

@import 'common/base.styl'

@import 'header.styl'

.pg-hd
    box-shadow 0 0 5px #d1c7da inset
    background #f3f0f6
    color #333
    .info .cart
        color #333

.icon-location
    display inline-block
    width 20px
    height 25px
    margin-right 12px
    bgImg(-236px, 0)
    vertical-align middle

//banner
.tc-banner
    position relative
    .arrow
        display none
        position absolute
        top 50%
        left 50%
        width 36px
        height 64px
        margin-top -32px
        cursor pointer
    .prev
        margin-left -555px
        bgImg(-326px, 0)
    .next
        margin-left 521px
        bgImg(-366px, 0)
    .con
        li
            a
                display block
                height 500px
//search
.section-search
    .tit
        font-size 18px
        .icon-dot
            display inline-block
            width 14px
            height 14px
            margin-right 12px
            border-radius 7px
            background #93d6e5
    .result
        float left
        width 732px
        margin-right 28px
        .tit
            margin-top 26px
            padding-left 32px
        .block
            margin-top 22px
            border 1px solid #bebebe
            background #f0f0f0
            .search
                position relative
                margin 24px 34px 0
                padding-left 48px
                background #fff
                .icon-search
                    position absolute
                    top 11px
                    left 12px
                    width 26px
                    height 27px
                    bgImg(-406px, 0)
                .input
                    display block
                    width 100%
                    padding 14px 0 15px
                    border none
            .nav
                margin 0 34px
                padding 9px 0
                span, a
                    margin-right 5px
                span
                    color #8d8d8d
            .list
                height 300px
                overflow-y auto
                background #fff
                li
                    padding 18px 34px
                    border-bottom 1px solid #f0f0f0
                    .name
                        margin-right 20px
                        font-size 16px
                    .rec
                        color #8d8d8d
                    .icon-add
                        float right
                        width 35px
                        height 35px
                        margin-top -6px
                        cursor pointer
                        bgImg(-437px, 0)
                    &:hover
                        padding-left 24px
                        border-left 10px solid #e95469
                        background #f0f0f0
                        .icon-add
                            border-radius 2px
                            background-position -469px 0
                            background-color #e95469
    .select
        float left
        width 280px
        height 520px
        padding 0 35px
        border-top 10px solid #404a58
        background #f7f7f7
        .tit
            margin-top 16px
        .list
            height 300px
            overflow-y auto
            margin-top 22pxzz
            li
                padding 12px 0
                border-bottom 1px dashed #bebebe
                .icon-del
                    float right
                    width 18px
                    height 18px
                    margin-right 8px
                    text-align center
                    cursor pointer
                &:hover
                    color #e95469
                    .icon-del
                        border-radius 3px
                        background #e95469
                        color #fff
        .btn-view
            display block
            width 220px
            height 45px
            margin 20px auto 0
            border-radius 3px
            background #e95469
            color #fff
            font-size 16px
            line-height 45px
            text-align center
.section-list
    background #f0f0f0
    .mod
        padding-top 60px
        .tit
            font-size 20px
            text-align center
        .list
            margin 15px -30px 0 0
            li
                float left
                height 400px
                overflow hidden
                margin 20px 29px 0 0
                background #fff
                font-size 12px
            .good
                position relative
                width 256px
                .top
                    display block
                    height 256px
                    .img
                        width 256px
                        height 256px
                .info
                    position absolute
                    bottom -80px
                    left 0
                    padding 0 16px 24px
                    background #fff
                    .name
                        display block
                        height 44px
                        overflow hidden
                        margin-top 17px
                        line-height 22px
                    .location
                        margin-top 26px
                    .des
                        height 36px
                        overflow hidden
                        margin-top 35px
                        padding-top 16px
                        border-top 1px solid #f0f0f0
                        color #8d8d8d
                        line-height 18px
            .destination
                width 540px
                a
                    display block
                    height 320px
                    .img
                        width 540px
                        height 320px
                    .info
                        margin-top 25px
                        padding-left 15px

