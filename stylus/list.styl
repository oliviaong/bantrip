@import 'component/reset.styl'
@import 'component/util.styl'

@import 'common/base.styl'

@import 'header.styl'

body
    background #f0f0f0
.icon-location
    display inline-block
    width 20px
    height 25px
    bgImg(-236px, 0)
    vertical-align middle
.mod
    margin-top 20px
.block-ope
    .location
        height 68px
        padding 26px 0 0 75px
        border-radius 4px 4px 0 0
        background url(i/bg-list.png)
        .list
            float left
            margin-top 8px
            color #fff
            dt
                display inline-block
                margin-right 40px
                .icon-location
                    margin-right 12px
            dd
                display inline-block
                padding 0 15px
                border-left 1px solid #fff
        .btn-edit
            float right
            width 125px
            margin-right 65px
            border none
            border-radius 4px
            background #e95469
            color #fff
            line-height 40px
            text-align center
    .filter
        padding 10px 30px 0
        background #fff
        .item
            padding 10px 0
            border-bottom 1px solid #f0f0f0
            dt
                display inline-block
                width 65px
                color #8d8d8d
                text-align right
            dd
                display inline-block
                margin-left 30px
                &.on
                    color #e95469
        .other
            padding 10px 0 10px 93px
            .seller
                input
                    margin-right 5px
.block-list
    .list
        margin-right -30px
        li
            position relative
            float left
            width 256px
            margin 0 29px 20px 0
            box-shadow 0 2px 3px #ccc
            background #fff
            font-size 12px
            .icon-zan
                position absolute
                z-index 5
                top 12px
                right 12px
                width 30px
                height 25px
                bgImg(-261px, 0)
                cursor pointer
                &.on
                    background-position -294px 0
            .top
                display block
                position relative
                height 256px
                .img
                    width 256px
                    height 256px
                .price-bg
                    position absolute
                    bottom 0
                    left 0
                    width 80px
                    height 24px
                    background #000
                    opacity 0.2
                .price
                    position absolute
                    bottom 0
                    left 0
                    width 80px
                    color #fff
                    line-height 24px
                    text-align center
            .info
                padding 0 16px 24px
                .name
                    display block
                    height 44px
                    overflow hidden
                    margin-top 14px
                    line-height 22px
                .location
                    margin-top 10px
                    .icon-location
                        margin-right 12px
                .des
                    height 36px
                    overflow hidden
                    margin-top 16px
                    padding-top 16px
                    border-top 1px solid #f0f0f0
                    color #8d8d8d
                    line-height 18px